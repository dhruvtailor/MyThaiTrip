<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_support"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cspl.tourtravelapps.fragment.SupportFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp8"
                    android:src="@drawable/chef_logo" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="144dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_email_white_24dp"
                        android:drawablePadding="@dimen/dp8"
                        android:drawableTint="@color/colorLightText2"
                        android:text="Email"
                        android:textColor="@color/colorLightText2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:maxLines="1"
                        android:text="help@amz-thai.com"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_phone_white_24dp"
                        android:drawablePadding="@dimen/dp8"
                        android:drawableTint="@color/colorLightText2"
                        android:text="Phone"
                        android:textColor="@color/colorLightText2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:maxLines="1"
                        android:text="+918460883792"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp16">
<!--
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none">-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp16">

                        <LinearLayout
                            android:id="@+id/fieldsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/supportName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp8"
                                android:hint="Name"
                                android:inputType="textPersonName"
                                android:maxLines="1"
                                android:singleLine="true" />

                            <EditText
                                android:id="@+id/supportEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp8"
                                android:enabled="false"
                                android:hint="Email"
                                android:textColor="@color/colorDarkText2"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:singleLine="true" />

                            <EditText
                                android:id="@+id/supportMessage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp8"
                                android:hint="Your message"
                                android:inputType="textLongMessage"
                                android:maxLines="3" />
                            <TextView
                                android:id="@+id/supportSend"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="@dimen/dp16"
                                android:background="@drawable/round_accent"
                                android:gravity="center"
                                android:padding="12dp"
                                android:text="Send us"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />
                        </LinearLayout>


                    </RelativeLayout>
            <!--</ScrollView>-->
            </android.support.v7.widget.CardView>
            </ScrollView>
        </LinearLayout>
</FrameLayout>

</ScrollView>