<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp8"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp8"
            android:weightSum="1">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/rest_res_1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:paddingLeft="@dimen/dp8"
                android:paddingTop="@dimen/dp8"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Safari World"
                    android:textColor="@color/colorDarkText4"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/itemAdults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:text="Adults"
                    android:textColor="@color/colorDarkText2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/itemChilds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:text="Childs"
                    android:textColor="@color/colorDarkText2"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/itemInfants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:text="Infants "
                    android:textColor="@color/colorDarkText2"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/itemTravelDate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:text="TravelDate "
                    android:textColor="@color/colorDarkText2"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/itemPriceTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="right"
                android:text="â‚¹999999"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp8"
                android:paddingBottom="@dimen/dp8"
                android:src="@drawable/ic_edit_gray_24dp" />

            <ImageView
                android:id="@+id/deleteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp8"
                android:paddingBottom="@dimen/dp8"
                android:src="@drawable/ic_delete_gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>